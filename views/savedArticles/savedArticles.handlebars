{{> nav }}
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Mongo Web Scraper</h1>
    <p class="lead">This App is not is not to be used for any commerical purposes; only educational.</p>
  </div>
</div>
<div class="container">

    {{#if articles}}
    {{#each articles}}

        {{#unless this.Saved}}
            <div class="row">
                <div class="col-xs-12">
                    <h3>There's no saved articles!!!</h3>
                </div>
            </div>
        {{/unless}}


        {{#if this.Saved}}
            <div class="row mb-4">
                <div class="col-md-12">
                    <h4><a href={{this.URL}}>{{this.Headline}}</a></h4>
                    <p>{{this.Summary}}</p>
                </div>
                <div class="col-xs-4 ml-3">
                    <button data-toggle="modal" data-target=".modal[article-id={{this._id}}]" type="button" class="btn btn-primary getCommentsBtn" article-id={{this._id}}>Comments</button>
                    <button type="button" class="btn btn-primary removeSavedBtn" article-id={{this._id}}>Remove from Saved</button>
                </div>
            </div>
            
            {{!-- comment modal --}}
            <div class="modal fade" id="commentModal" article-id={{this._id}} tabindex="-1" role="dialog" aria-labelledby="commentModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="commentModalLabel">Comments</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                            
                            {{> comments}}
                            
                        <form>
                        <div class="form-group">
                            <label for="message-text" class="col-form-label">New Comment:</label>
                            <textarea class="form-control" article-id={{this._id}} id="message-text"></textarea>
                        </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary postComment">Post New Comment</button>
                    </div>
                    </div>
                </div>
            </div>

        {{/if}}

    {{/each}}
    {{/if}}





</div>

