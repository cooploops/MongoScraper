{{#unless posts}}
<div class="row">
    <div class="col-xs-12">
        <h3>There's no articles!!!</h3>
    </div>
</div>
{{/unless}}

{{#if posts}}
{{#each posts}}
<div class="row">
    <div class="col-xs-9">
        <h4><a href={{this.URL}}>{{this.Headline}}</a></h4>
        <p>{{this.Summary}}</p>
    </div>
    <div class="col-xs-3">
        <a type="button" id="getArticles" class="btn btn-primary" href="/scrapePosts">Save This Article</a>
    </div>
</div>
{{/each}}
{{/if}}